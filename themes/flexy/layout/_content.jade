//- index page
if is_home()
  h4.page-title أحدث المقالات
  each post in site.posts.sort('date', 'desc').toArray()
    - var reading_length = Math.ceil(post.content.replace(/[^a-zA-Z\s]/g, '').split(/[\s]+/).length / 250)
    article.item(itemscope, itemprop='blogPost', itemtype='https://schema.org/BlogPosting')
      a.article(href= config.root + post.path)
        h2(itemprop='headline')= post.title
      span.post-meta
        | نشر في
        time(itemprop='datePublished', datetime= post.date.toISOString())= full_date(new Date(post.date), ' YYYY/MM/DD') + ' الساعة ' + full_date(new Date(post.date), 'H:mm')
        | , وقت القراءة #{reading_length} دقيقة
      p(itemprop='text').post-excerpt= post.intro ? post.intro : post.content.replace(/<(?:.|\n)*?>/gm, '').substr(0, 220)
  footer(itemscope, itemtype='https://schema.org/WPFooter')
    include _footer
//- articles page
if is_page() && page.title.toLowerCase() == 'articles'
  article.full
    h1(itemprop='headline')= page.title
    != page.content
    - var lastyear = 0
    for post, index in site.posts.sort('date', 'desc').toArray()
      if lastyear != post.date.format('YYYY')
        if index != 0
          | </ul>
        - lastyear = post.date.format('YYYY')
        h4= lastyear
        | <ul>
        li(itemprop='name')
          a(href= config.root + post.path, itemprop='url') #{post.title}
          |  &mdash;
          time(itemprop='datePublished', datetime= post.date.toISOString())= full_date(new Date(post.date), ' MMMM Do')
      else
        li
          a(href= config.root + post.path) #{post.title}
          |  &mdash;
          time(itemprop='datePublished', datetime= post.date.toISOString())= full_date(new Date(post.date), ' MMMM Do')
    if site.posts.toArray().length != 0
      | </ul>
  include _comments
else if is_page()
  article.full
    h1(itemprop='headline')= page.title
    if page.updated
      span.post-meta
        | آخر تحديث في
        time(itemprop='dateModified', datetime= page.date.toISOString())= full_date(new Date(page.updated), ' YYYY/MM/DD') + ' الساعة ' + full_date(new Date(page.updated), 'H:mm')
    != page.content
  include _comments
else if is_post()
  article.full
    h1(itemprop='headline')= page.title
    span.post-meta
      | نشر في
      time(itemprop='datePublished', datetime= page.date.toISOString())= full_date(new Date(page.date), ' YYYY/MM/DD') + ' الساعة ' + full_date(new Date(page.date), 'H:mm')
      if page.updated
        br
        | آخر تحديث في
        time(itemprop='dateModified', datetime= page.date.toISOString())= full_date(new Date(page.updated), ' YYYY/MM/DD') + ' الساعة ' + full_date(new Date(page.updated), 'H:mm')
    != page.content
  include _comments